<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Allvie</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>memberEnroll</servlet-name>
    <jsp-file>/WEB-INF/views/member/member.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>memberEnroll</servlet-name>
    <url-pattern>/member/memberEnroll</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>memberLogin</servlet-name>
    <jsp-file>/WEB-INF/views/member/memberLogin.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>memberLogin</servlet-name>
    <url-pattern>/member/memberLogin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>findInfoId</servlet-name>
    <jsp-file>/WEB-INF/views/member/findInfoId.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>findInfoId</servlet-name>
    <url-pattern>/member/findInfoId</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>findInfoPwd</servlet-name>
    <jsp-file>/WEB-INF/views/member/findInfoPwd.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>findInfoPwd</servlet-name>
    <url-pattern>/member/findInfoPwd</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>memberView</servlet-name>
    <jsp-file>/WEB-INF/views/member/memberView.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>memberView</servlet-name>
    <url-pattern>/member/memberView</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>memberPwdUpdate</servlet-name>
    <jsp-file>/WEB-INF/views/member/updatePassword.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>memberPwdUpdate</servlet-name>
    <url-pattern>/member/memberUpdatePwd</url-pattern>
  </servlet-mapping>
    <servlet>
    <servlet-name>memberEmailChk</servlet-name>
    <jsp-file>/WEB-INF/views/member/emailChk.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>memberEmailChk</servlet-name>
    <url-pattern>/member/emailCheck</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>EncodeFilter</filter-name>
    <filter-class>com.r2.common.EncodeFilter</filter-class>
    <init-param>
      <param-name>encodeType</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodeFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <resource-ref>
    <description>Allvie Oracle DataSource</description>
    <res-ref-name>jdbc/myoracle</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>